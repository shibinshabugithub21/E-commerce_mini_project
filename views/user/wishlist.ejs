<%- include('header') %>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .wishlist-item {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            gap: 10px;
            padding: 20px;
        }

        .wishlist-item .product-image {
            position: relative;
        }

        .wishlist-item .product-image img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .wishlist-item .no-items-img {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 200px; /* Adjust width as needed */
        }

        .wishlist-item .no-items-button {
            margin-top: 20px;
        }

        .wishlist-item .product-details {
            flex: 1;
        }

        .wishlist-item .product-details h3 {
            margin: 0;
            font-size: 1.2rem;
            color: #333;
        }

        .wishlist-item .product-details p {
            margin: 5px 0;
            color: #666;
        }

        .wishlist-item .btn-remove {
            background-color: #dc3545;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 14px;
            transition: background-color 0.3s;
            align-self: flex-end;
        }

        .wishlist-item .btn-remove:hover {
            background-color: #c82333;
        }

        @media (min-width: 768px) {
            .wishlist-item {
                flex-direction: row;
            }

            .wishlist-item .product-image {
                width: 200px;
                margin-right: 20px;
            }

            .wishlist-item .product-details {
                flex: 1;
            }

            .wishlist-item .btn-remove {
                align-self: flex-start;
            }
        }
    </style>
</head>
<body>
    
    <div class="container">
        <% if (productDetails.length > 0) { %>
            <% productDetails.forEach(product => { %>
                <div class="wishlist-item">
                    <div class="product-image">
                        <img src="<%= product.image %>" alt="<%= product.name %>">
                        <img src="/productImages/<%= product.Image[0] %>" alt="<%= product.Productname %>">
                    </div>
                    <div class="product-details">
                        <h3>PhoneName<%= product.Productname %></h3>
                        <p>Description: <%= product.Description %></p>
                        <p>Price: <%= product.Price%></p>
                        <!-- You can add more product details here if needed -->
                    </div>
                    <form action="/wishlistdelete/<%= product._id %>" method="get">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn-remove">Remove</button>
                    </form>
                </div>
            <% }); %>
        <% } else { %>
                <div class="product-image">
                    <img src="/img/f6e464230662e7fa4c6a4afb92631aed.png" alt="No items in wishlist" class="no-items-img">
                </div>
                <button class="btn btn-success btn-lg btn-block no-items-button" onclick="window.location.href='/home'">Go Back to Home</button>
        
        <% } %>
    </div>    

<%- include('footer') %>
</body>
</html>
