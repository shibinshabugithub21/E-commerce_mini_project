<script>
    document.addEventListener('DOMContentLoaded', function () {
        var form = document.getElementById('signupForm');
        form.addEventListener('submit', function (event) {
            var username = form.querySelector('#username').value.trim();
            var email = form.querySelector('#email').value.trim();
            var password = form.querySelector('#password').value.trim();
            var confirmPassword = form.querySelector('#confirmPassword').value.trim();
            var phone = form.querySelector('#phone').value.trim();

            var errorUsername = document.getElementById('errorUsername');
            var errorEmail = document.getElementById('errorEmail');
            var errorPassword = document.getElementById('errorPassword');
            var errorConfirmPassword = document.getElementById('errorConfirmPassword');
            var errorPhone = document.getElementById('errorPhone');
            var validationMessage = document.getElementById('validationMessage');

            errorUsername.innerHTML = '';
            errorEmail.innerHTML = '';
            errorPassword.innerHTML = '';
            errorConfirmPassword.innerHTML = '';
            errorPhone.innerHTML = '';
            validationMessage.innerHTML = '';

            if (username === '' || email === '' || password === '' || confirmPassword === '' || phone === '') {
                validationMessage.innerHTML = 'Please fill in all fields.';
                event.preventDefault();
                return;
            }

            if (/\s/.test(username) || /\s/.test(password)) {
                validationMessage.innerHTML = 'Username and password should not contain whitespace.';
                event.preventDefault();
                return;
            }

            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                errorEmail.innerHTML = 'Enter a valid email address.';
                event.preventDefault();
                return;
            }

            if (password.length < 8) {
                errorPassword.innerHTML = 'Password must be at least 8 characters long.';
                event.preventDefault();
                return;
            }

            var passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]+$/;
            if (!passwordRegex.test(password)) {
                errorPassword.innerHTML = 'Password must contain at least one uppercase letter, one lowercase letter, one number, and one special character.';
                event.preventDefault();
                return;
            }

            if (password !== confirmPassword) {
                errorConfirmPassword.innerHTML = 'Passwords do not match.';
                event.preventDefault();
                return;
            }

            form.submit();
        });
    });
</script>

