<%-include("header")-%>
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    :root {
        --primary-color: #5344db;
        --accent-color: #5344db;
        --grey: #484848;
        --bg-grey: #efefef;
        --shadow: #949494;
    }

    .single-product {
        display: flex;
        justify-content: space-between;
        margin-top: 20px; /* Adjust margin as needed */
    }

    .product-image {
        flex: 1;
        margin-right: 20px; /* Adjust margin as needed */
        position: relative;
    }

    .product-image-main {
    height: 300px;
    /* background: var(--bg-grey); */
    overflow: hidden;
    margin-left: 63px;
    }
    .product-image-main img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .product-image-slider {
        display: flex;
        gap: 10px;
        margin: 50px 20px;
        justify-content: center;
    }

    .product-image-slider img {
        width: 15%;
        height: 50%;
        /* background: var(--bg-grey); */
        padding: 6px;
        cursor: pointer;
    }

    .product-details {
        flex: 1;
        /* margin-left: 20px; */
    }

    .product-title h2 {
        font-size: 32px;
        line-height: 2.4rem;
        font-weight: 700;
        letter-spacing: -0.02rem;
    }

    .product-rating {
        display: flex;
        margin-top: 4px;
        margin-bottom: 10px;
        align-items: center;
    }

    .product-rating span:not(:last-child) {
        color: #ffc600;
    }

    .product-rating .review {
        color: var(--grey);
        font-size: 12px;
        font-weight: 500;
    }

    .product-price {
        display: flex;
        position: relative;
        margin: 10px 0;
        align-items: center;
    }

    .product-price .offer-price {
        font-size: 48px;
        font-weight: 700;
    }

    .product-price .sale-price {
        font-size: 22px;
        font-weight: 500;
        text-decoration: line-through;
        color: var(--grey);
        margin-left: 12px;
    }

    .product-details h3 {
        font-size: 18px;
        font-weight: 500;
    }

    .product-details p {
        margin: 5px 0;
        font-size: 14px;
        line-height: 1.2rem;
    }

    /* Zoom styles */
   /* Zoom styles */
.container-img {
    position:absolute;
    /* overflow: hidden; */
}

.image {
    width: 100%;
    height: auto;
}

.lens {
    width: 100px;
    height: 100px;
    /* position: relative; */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    /* background-color: rgba(255, 255, 255, 0.6); */
    /* display: none; */
}

.result {
    position: absolute;
    left: 100%; /* Change this to the desired position */
    top: 0;
    width: 500px;
    height: 500px;
    background-repeat: no-repeat;
    background-color: white;
    /* display: none; */
}


    .product-image:hover .lens,
    .product-image:hover .result {
        display: block;
    }

    .breadcrumb {
        background: #48484810;
        padding: 8px 4px;
        border-radius: 8px;
        font-size: 15px;
    }

    .breadcrumb span {
        display: inline-flex;
        flex-direction: row;
        gap: 8px;
        margin-left: 8px;
    }

    .breadcrumb span:not(:last-child)::after {
        content: '/';
    }

    .breadcrumb span a {
        text-decoration: none;
        color: var(--primary-color);
    }

    .divider {
        display: block;
        height: 1px;
        width: 100%;
        background: #48484830;
        margin: 20px 0;
    }

    .product-btn-group {
        display: flex;
        gap: 15px;
    }

    .product-btn-group .button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        padding: 10px 24px;
        font-size: 16px;
        font-weight: 500;
    }

    .product-btn-group .buy-now {
        background-color:blue;
        color: #fff;
        border: 1px solid var(--accent-color);
        border-radius: 4px;
        cursor: pointer;
    }

    .product-btn-group .buy-now i {
        font-size: 20px;
    }

    .product-btn-group .buy-now:hover {
        box-shadow: 0 3px 6px var(--shadow);
    }

    .product-btn-group .add-cart {
        background-color:orange;
        color:black;
        border-radius: 4px;
        cursor: pointer;
    }

    .product-btn-group .add-cart i {
        font-size: 20px;
    }

    .product-btn-group .add-cart:hover {
        box-shadow: 0 3px 6px var(--shadow);
        background: var(--grey);
        color: #fff;
    }

    .product-btn-group .heart {
        color: var(--grey);
        cursor: pointer;
    }

    .product-btn-group .heart i {
        font-size: 20px;
    }

    .product-btn-group .heart:hover {
        color: var(--accent-color);
    }

    /* Responsive styles */
    @media screen and (max-width: 768px) {
        .single-product {
            flex-direction: column;
            align-items: center;
        }

        .product-image {
            margin-right: 0;
            margin-bottom: 20px;
        }

        .product-image-main {
            margin-left: 0;
        }

        .product-image-slider {
            margin: 20px auto;
            justify-content: center;
        }

        .product-image-slider img {
            width: 80px; /* Adjust size as needed */
            height: auto;
        }

        .product-details {
            text-align: center;
        }

        .breadcrumb {
            display: none;
        }

        /* Adjust zoom container size for smaller screens */
        .zoom-container {
            width: 80%; /* Adjust width as needed */
            height: auto;
            margin-left: auto;
            margin-right: auto;
        }

        /* Adjust lens size for smaller screens */
        .lens {
            width: 20px; /* Adjust size as needed */
            height: 20px;
        }

        /* Adjust result container size for smaller screens */
        .result {
            width: 200px; /* Adjust size as needed */
            height: 200px;
        }
    }

    /* Responsive Tablet */
    @media (min-width: 520px) and (max-width: 1080px) {
        .container {
            display: block;
            height: auto;
            padding: 20px;
        }
    }
    #error{
        color: red;
        font-size: large;
    }
    /* Reduce size of recommended product cards */
    .card {
        width: 200px; /* Adjust width as needed */
        margin-bottom: 20px; /* Adjust margin as needed */
    }

    .card-img-top {
        height: 200px; /* Adjust height as needed */
        object-fit: cover;
    }

    .card-body {
        padding: 10px; /* Adjust padding as needed */
    }

    .card-title {
        font-size: 16px; /* Adjust font size as needed */
        margin-bottom: 5px; /* Adjust margin as needed */
    }

    .offer-price {
        font-size: 14px; /* Adjust font size as needed */
    }
    

</style>

<div class="container">
    <div class="single-product">
        <div class="product-image">
            <div class="product-image-main">
                <div class="container-img">
                    <div id="zoomContainer-<%= product.id %>" class="zoom-container">
                    <img id="image-<%= product.id %>" class="card-img-top image" style="width: 100%; height: 21.1em;" src="/productImages/<%= product.Image[0] %>" />
                    <div class="lens" data-productid="<%= product.id %>"></div>
                    <div class="result" data-productid="<%= product.id %>" style="z-index: 1000;"></div>
                </div>
                </div>
            </div>
            <div class="product-image-slider">
                <!-- Update IDs for zoom functionality -->
                <% product.Image.forEach((img, index) => { %>
                    <img id="zoom-image-<%= product._id %>-<%= index %>" class="card-img-top" style="width: 15%; height: 50%;" src="/productImages/<%= img %>" onclick="changeMainImage('<%= product.id %>', '<%= img %>')" />
                <% }) %>
            </div>
        </div>
        
        <div class="product-details">
            <div class="breadcrumb">
                <span><a href="#">Home</a></span>
                <span><a href="#">Product</a></span>
                <span class="active">details</span>
            </div>

            <div class="product">
                <div class="product-title">
                    <h2><%= product.Productname %></h2>
                </div>
                <div class="product-rating">
                    <span><i class="bx bxs-star"></i></span>
                    <span><i class="bx bxs-star"></i></span>
                    <span><i class="bx bxs-star"></i></span>
                    <span><i class="bx bxs-star"></i></span>
                    <span><i class="bx bxs-star"></i></span>
                    <span class="review">(<%= product.Rating %>.rating)</span>
                </div>
                
                <div class="d-flex flex-column">
                    <div class="product-price">
                        <!-- Original price with strike-through -->
                        <span class="sale-price">₹<%= product.Price%></span>
                        
                        <!-- Offer price -->
                        <span class="offer-price">₹<%= product.OriginalPrice %></span>
                    </div>
    
                    <div class="product-details mb-4">
                        <h3>About</h3>
                        <p><%= product.Description %></p>
                    </div>
    
                    <div class="product-btn-group">
                        <% if (!errorMessage) { %>
                        <form action="/cart/<%= product._id %>" method="post">
                            <button class="add-to-cart btn btn-warning"  data-product-id="<%= product._id %>" data-product-price="<%= product.Price %>" type="submit">Add to Cart</button>
                            <div type="button" class="btn btn-primary btn-lg btn-block">
                                <a href="/buy-product?productId=<%=product._id%>" style="text-decoration: none; color: white;">Buy Now</a>
                            </div>
                        </form>                  
                        <% } else { %>
                            <p id="error"><%= errorMessage %></p>
                        <% } %>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<h1><center>Recommended Products</center></h1>

<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        <% recommendedProducts.forEach(recommendedProduct => { %>
            <div class="col">
                <div class="card mb-4">
                    <a href="/details/<%= recommendedProduct._id %>"> <!-- Details Page URL -->
                        <img class="card-img-top" src="/productImages/<%= recommendedProduct.Image[0] %>" alt="<%= recommendedProduct.Productname %>">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><%= recommendedProduct.Productname %></h5>
                        <span class="offer-price">₹<%= recommendedProduct.OriginalPrice %></span>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>



<script>
    const containers = document.querySelectorAll(".container-img");

    containers.forEach(container => {
        const lens = container.querySelector(".lens");
        const result = container.querySelector(".result");

        // Check if the window width is greater than or equal to 520 pixels
        if (window.innerWidth >= 520) {
            container.addEventListener("mousemove", zoomImage);
            container.addEventListener("mouseenter", () => {
                lens.style.display = "block";
                result.style.display = "block";
            });
            container.addEventListener("mouseleave", () => {
                lens.style.display = "none";
                result.style.display = "none";
            });
        }

        function zoomImage(e) {
            const productId = container.querySelector(".lens").getAttribute("data-productid");
            const image = container.querySelector(`#image-${productId}`);
            const lens = container.querySelector(".lens");
            const result = container.querySelector(".result");

            const containerRect = container.getBoundingClientRect();
            const lensRect = lens.getBoundingClientRect();
            const resultRect = result.getBoundingClientRect();

            const { x, y } = getMousePos(e);

            lens.style.left = x + "px";
            lens.style.top = y + "px";

            let fx = resultRect.width / lensRect.width;
            let fy = resultRect.height / lensRect.height;

            result.style.backgroundImage = `url('${image.src}')`;
            result.style.backgroundSize = `${image.width * fx}px ${image.height * fy}px`;
            result.style.backgroundPosition = `-${x * fx}px -${y * fy}px`;
        }

        function getMousePos(e) {
            const containerRect = container.getBoundingClientRect();
            return {
                x: e.clientX - containerRect.left - lens.offsetWidth / 2,
                y: e.clientY - containerRect.top - lens.offsetHeight / 2
            };
        }
    });

    function changeMainImage(productId, imageSrc) {
        const mainImage = document.querySelector(`#image-${productId}`);
        mainImage.src = `/productImages/${imageSrc}`;
    }

    function addToCheckout(productId) {
        // Make a POST request to the addToCheckout route with the product ID
        fetch(`/addToCheckout/${productId}`, {
            method: 'POST'
        })
        .then(response => {
            // Handle response, such as redirecting to the checkout page
            window.location.href = '/checkout';
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
</script>


