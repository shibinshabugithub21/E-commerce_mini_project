<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Add Category</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
  body {
    overflow: hidden;
    background-color: #f8f9fa;
}

.main {
    display: flex;
    height: 100vh;
}

.side-nav {
    background-color: black;
    color: white;
    padding: 15px;
    text-align: left;
    width: 150px;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);

}

.side-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    
}

.side-nav a {
    text-decoration: none;
    color: #fff;
    text-align: center;
    display: block;
    padding: 10px;
    margin-top: 30px;
    border-radius: 3px;
}

.container {
    background-color: #ffffff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    padding: 30px;
    margin: 50px;
    width: calc(100% - 150px); /* Adjusting width to accommodate sidebar */
}

h2 {
    color: #007bff;
}

button {
    background-color: #007bff;
    border: none;
}
.error{
    color: red;
}
button:hover {
    background-color: #0056b3;
}

  </style>
</head>
<body>
<div class="main">
  <div class="side-nav">
    <ul>
        <li><a href="/admin/home">Dashboard</a></li>
        <li><a href="/admin/user">User</a></li>
        <li><a href="/admin/category">Category</a></li>
        <li><a href="/admin/product">Product</a></li>
        <li><a href="/admin/order">Order</a></li>
        <li><a href="/admin/logout">logout</a></li>
    </ul>
</div>

<div class="container w-50 border py-5">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <h2 class="mb-4">ADD New Category</h2>
      <form id="categoryForm">
        <div id="error" style="color: red;"></div>
        <div class="form-group">
          <label for="Category">Category Name:</label>
          <input type="text" class="form-control" id="Category" name="category" placeholder="New Category">
        </div>
        <div class="form-group">
          <label for="Offer">Offer (Discount %):</label>
          <input type="number" class="form-control" id="Offer" name="offer" placeholder="Enter discount">
          <div id="offerError" class="error"></div> <!-- Error message for offer validation -->
        </div>
        <button type="submit" class="btn btn-primary">Add Category</button>
      </form>
    </div>
  </div>
</div>
</div>

<script>
document.getElementById('categoryForm').addEventListener('submit', async function(event) {
    event.preventDefault();

    let categoryName = document.getElementById("Category").value.trim();
    let offer = document.getElementById("Offer").value.trim();

    let errorId = document.getElementById("error");
    let offerError = document.getElementById("offerError");

    // Function to show error message
    function showError(message, element) {
        element.textContent = message;
        element.classList.add("error-message");

        setTimeout(() => {
            element.textContent = "";
            element.classList.remove("error-message");
        }, 5000);
    }

    // Check if category name is empty
    if (!categoryName) {
        showError("Category name is required", errorId);
        return;
    }

    // Check if offer is a negative number
    if (offer < 0) {
        showError("Offer cannot be a negative number", offerError);
        return;
    }

    // Submit the form with both category name and offer
    const data = {
        category: categoryName,
        offer: offer
    };

    const response = await fetch("/admin/AddCategory", {
        method: "POST",
        headers: {
            "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
    });

    if (response.ok) {
        const responseData = await response.json();
        window.location.href = "/admin/category";
    } else {
        const errorMessage = await response.json();
        showError(errorMessage.mes, errorId);
    }
});

</script>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
