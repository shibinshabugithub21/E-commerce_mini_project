<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banner Management</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-content {
            display: flex;
            flex: 1;
        }

        /* Sidebar Navigation */
        .side-nav {
            background-color:black;
            color:white;
            padding: 15px;
            text-align: left;
            width: 200px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
            height: calc(100vh - 80px); /* Adjusted height to fit below top navigation bar */
        }

        .side-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .side-nav a {
            text-decoration: none;
            color: #fff;
            display: block;
            padding: 10px;
            margin-top: 10px;
            border-radius: 3px;
            border-radius: 20px;
            transition:  0.33s ease-in-out;  
            font-weight: 500; 
        }

        .side-nav a:hover{
            color: black;
            background-color: white;
            border-radius: 20px;
        }

        /* Main Content Area */
        .content {
            flex: 1;
            padding: 20px;
            overflow-y: auto; /* Added overflow-y to allow scrolling if content overflows */
        }

        .banner-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .banner-card {
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            transition: transform 0.3s ease;
        }

        .banner-card:hover {
            transform: translateY(-5px);
        }

        .banner-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px 10px 0 0;
        }

        .banner-card-content {
            padding: 20px;
        }

        .banner-card h3 {
            margin-top: 0;
            font-size: 20px;
            color: #333;
            margin-bottom: 10px;
        }

        .banner-card p {
            margin: 0;
            font-size: 14px;
            color: #666;
        }

        .btn-container {
            margin-top: 20px;
            text-align: center;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #4caf50;
            color: #fff;
        }

        .btn-danger {
            background-color: #f44336;
            color: #fff;
        }

        .btn-block {
            background-color: #2196f3;
            color: #fff;
        }

        .btn:hover {
            opacity: 0.8;
        }

        /* Top Navigation */
        .top-nav {
            width: 100%;
            height: 80px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            background-color: rgb(246, 246, 246);
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            text-transform: uppercase;
        }

        @media screen and (max-width: 768px) {
            .side-nav {
                display: none; /* Hide sidebar on smaller screens */
            }
            .content {
                padding-left: 20px; /* Add padding to content to compensate for hidden sidebar */
            }
        }
    </style>
</head>

<body>
    <!-- Top Navigation -->
    <div class="top-nav">
        <!-- Add top navigation content here if needed -->
        <h1>Banner Management</h1>
    </div>

    <div class="main-content">
        <!-- Sidebar Navigation -->
        <div class="side-nav">
            <ul>
                <li><a href="/admin/home">Dashboard</a></li>
                <li><a href="/admin/user">User</a></li>
                <li><a href="/admin/category">Category</a></li>
                <li><a href="/admin/product">Product</a></li>
                <li><a href="/admin/order">order</a></li>
                <li><a href="/admin/coupoun">coupoun</a></li>
                <li><a href="/admin/logout">logout</a></li>
                <!-- Add more navigation items as needed -->
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="content">
            <div class="banner-container">
                <!-- Sample banner card -->
                <% Banner.forEach(function(banner) { %>
                    <div class="banner-card">
                        <img src="/<%= banner.imageUrl %>" alt="<%= banner.title %>">
                        <div class="banner-card-content">
                            <h3><%= banner.title %></h3>
                            <!-- Add any other banner details you want to display -->
                            <div class="btn-container">
                                <a href="/admin/deletebanner/<%= banner._id %>" >
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </a>
                                <form action="/admin/blockbanner/<%= banner._id %>" method="post">
                                    <input type="hidden" name="bannerId" value="<%= banner._id %>">
                                    <% if (banner.status === 'active') { %>
                                        <button type="submit" class="btn btn-danger" style="margin-top: 10px;">Block</button>
                                    <% } else { %>
                                        <button type="submit" class="btn btn-success"style="margin-top: 10px;">Unblock</button>
                                    <% } %>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
                <!-- End of sample banner card -->
            </div>

            <!-- Button container -->
            <div class="btn-container">
               <a href="/admin/addbanner"><button class="btn btn-primary">Add Banner</button></a> 
            </div>
        </div>
    </div>
</body>

</html>
