<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    .container {
      margin-top: 105px;
    }

    form {
      max-width: 400px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
    }

    input[type="text"],
    input[type="number"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button[type="submit"] {
      display: block;
      width: 100%;
      padding: 10px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button[type="submit"]:hover {
      background-color: #0056b3;
    }

    .error {
      color: red;
      margin-top: 5px;
    }
  </style>
</head>
<body>
    
<div class="container w-25 border py-5">
 <!-- admin/editcategory.ejs -->
<form id="editCategoryForm" action="/admin/editcategory/<%=Category._id %>" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%=Category.Category%>" required>
    <label for="offer">Offer (Discount %):</label>
    <input type="number" name="offer" id="offer" value="<%=Category.Offer%>" required>
    <div id="offerError" class="error"></div> <!-- Error message for offer validation -->
    <button type="submit">Save Changes</button>
</form>
</div>

<script>
document.getElementById('editCategoryForm').addEventListener('submit', function(event) {
    event.preventDefault();

    let offer = document.getElementById("offer").value.trim();
    let offerError = document.getElementById("offerError");

    // Function to show error message
    function showError(message) {
        offerError.textContent = message;
    }

    // Check if offer is a negative number
    if (offer < 0) {
        showError("Offer cannot be a negative number");
        return;
    }

    // If offer is valid, submit the form
    this.submit();
});
</script>

</body>
</html>
