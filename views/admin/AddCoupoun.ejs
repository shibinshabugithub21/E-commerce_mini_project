<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            min-height: 100vh;
            background-color: #f4f4f4;
            overflow-x: hidden;
        }

        /* Sidebar Navigation */
        .side-nav {
            background-color:black;
            color:white;
            padding: 15px;
            text-align: left;
            width: 200px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
            height: 800px;
        }

        .side-nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
            position: absolute;
            left: 45px;
            top: 120px;
        }

        .side-nav a {
            text-decoration: none;
            color: #fff;
            text-align: center;
            display: block;
            padding: 10px;
            margin-top: 40px;
            border-radius: 3px;
            border-radius: 20px;
            transition:  0.33s ease-in-out;  
            font-weight: 500; 
        }

        .side-nav a:hover{
            color: black;
            background-color: white;
            border-radius: 20px;
        }

        /* Main Content Area */
        .content {
            flex: auto;
        }

        /* Top Navigation */
        .top-nav {
            width: 100%;
            height: 50px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            background-color: gray;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            z-index: 1; /* Ensure top-nav is above sidebar */
        }

        /* Form Styling */
        form {
            width: 50%;
            margin: 20px auto;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        input[type="text"],
        input[type="date"],
        input[type="number"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        input[type="submit"] {
            background-color: #3498db;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #2980b9;
        }

        /* Responsive Styles */
        @media only screen and (max-width: 600px) {
            .side-nav {
                display: none;
            }

            .top-nav {
                padding: 10px;
            }

            .content {
                padding: 10px;
            }

            form {
                width: 80%;
            }
        }
    </style>
</head>

<body>

    <!-- Sidebar Navigation -->
    <div class="side-nav">
        <ul>
            <li><a href="/admin/home">Dashboard</a></li>
            <li><a href="/admin/user">User</a></li>
            <li><a href="/admin/category">Category</a></li>
            <li><a href="/admin/product">Product</a></li>
            <li><a href="/admin/order">order</a></li>
            <li><a href="/admin/coupoun">coupoun</a></li>
            <li><a href="/admin/logout">logout</a></li>
        </ul>
    </div>

    <!-- Main Content Area -->
    <div class="content">
        <!-- Top Navigation -->
        <div class="top-nav">
            <h1><u>Add New Coupon</u></h1>
        </div>

        <!-- Add New Coupon Form -->
        <form >
            <label for="couponCode">Coupon Code:</label>
            <input type="text" id="couponCode" name="couponCode" required>

            <label for="discountType">Discount Amount:</label>
            <!-- <select id="discountType" name="discountType" required> -->
                <!-- <option value="Fixed">Fixed</option> -->
                <!-- <option value="Percentage">Percentage</option> -->
                <input type="text" id="discountType" name="discountType" required>
            <!-- </select> -->

            <label for="discountAmount">Usage Limit:</label>
            <input type="text" id="number" name="discountAmount" required>

            <label for="expiryDate">Expiry Date:</label>
            <input type="date" id="expiryDate" name="expiryDate" required>

            

            <button type="button" onclick="addCoupon(event)">Click to Add Coupon</button>

        </form>
    </div>
</body>

<script>
    const form = document.querySelector('form');

    async function addCoupon(event) {
    // event.preventDefault();

    const formData = new FormData(form);
    const data = {};
    formData.forEach((value, key) => {
        data[key] = value;
    });
    console.log('Coupon data:', data);

    try {
        const response =  await fetch('/admin/addcoupon', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        });

        const responseData =  response.json();
        if (!response.ok) {
            console.log("inside not ok")
            // Handle non-ok response
            throw new Error('Failed to add coupon: ' + response.statusText);
        }

        console.log('Coupon added successfully:', responseData);
        window.location.href = "/admin/coupoun";
        // Optionally redirect or perform additional actions after successful coupon addition
    } catch (error) {
        console.error('Error adding coupon:', error.message);
        // Handle error, display message to user, etc.
    }
}

    // Attach the addCoupon function to the form submission event
    // form.addEventListener('submit', addCoupon);
</script>

</html>
